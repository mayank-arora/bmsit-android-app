<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.bmsit.bmsit.Broadcast">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broadcast"
        android:id="@+id/bBroadcast"
        android:layout_alignParentTop="true"
        android:background="@drawable/button"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textAllCaps="true"
        android:background="@drawable/button_grey"
        android:id="@+id/bSkip"
        android:layout_below="@+id/bBroadcast"
        android:layout_alignLeft="@+id/bBroadcast"
        android:layout_alignStart="@+id/bBroadcast"
        android:layout_alignRight="@+id/bBroadcast"
        android:layout_alignEnd="@+id/bBroadcast" />
</RelativeLayout>
