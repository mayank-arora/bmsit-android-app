<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editId"
        android:layout_marginTop="101dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editPass"
        android:layout_below="@+id/editId"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/editId"
        android:layout_alignEnd="@+id/editId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/button"
        android:textAllCaps="true"
        android:id="@+id/bLogin"
        android:textColor="#fff"
        android:layout_below="@+id/editPass"
        android:layout_alignRight="@+id/editId"
        android:layout_alignEnd="@+id/editId"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/editPass"
        android:layout_alignStart="@+id/editPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/bRegister"
        android:textAllCaps="true"
        android:background="@drawable/button_grey"
        android:layout_below="@+id/bLogin"
        android:layout_alignLeft="@+id/bLogin"
        android:layout_alignStart="@+id/bLogin"
        android:layout_alignRight="@+id/bLogin"
        android:layout_alignEnd="@+id/bLogin" />
</RelativeLayout>
